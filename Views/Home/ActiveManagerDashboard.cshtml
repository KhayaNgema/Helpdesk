<style>
    /* Common card style */
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 20px;
        background: #B0E0FC;
        width: 100%;
        height: 30vh;
    }

    /* Text color for all cards */
    .card-title, .card-text {
        color: #030319;
    }

    /* Button styles for all cards */
    .btn-primary {
        background-color: #B0E0FC;
        color: #030319;
        transition: background-color 0.3s ease; /* Add transition for smooth effect */
    }

        .btn-primary:hover {
            background-color: #030319; /* Change color on hover */
        }

    .styled-button {
        background-color: #ffffff;
        color: #030319;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px; /* Adjust the padding as needed */
        text-decoration: none; /* Remove underline */
    }

        .styled-button span.arrow {
            margin-left: 10px; /* Adjust the margin as needed */
        }

    .center-number {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 30%;
        margin: 0;
    }
    /* Style for the h2 element */
    h2 {
        color: #D4D4D4; /* Light blue color */
    }
</style>

