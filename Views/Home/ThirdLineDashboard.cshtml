@{
    ViewBag.Title = "FirstLineDashboard";
}

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 20px;
        background: #B0E0FC;
        width: 100%;
        height: 30vh;
    }


    .card-title, .card-text {
        color: #030319;
    }

    .btn-primary {
        background-color: #B0E0FC;
        color: #030319;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #030319;
        }

    .styled-button {
        background-color: #ffffff;
        color: #030319;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        text-decoration: none;
    }

        .styled-button span.arrow {
            margin-left: 10px;
        }

    .center-number {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 30%;
        margin: 0;
    }

    h2 {
        color: #D4D4D4;
    }
</style>

<h2>Dashboard</h2>
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card clients-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Unresolved Incidents</h5>
                    <p class="card-text">Unresolved incidents that has been logged by XET support agents and clients.</p>
                    <h1 class="card-text text-center center-number">@ViewBag.UnresolvedIncidentsCount</h1>
                    <a href="/FirstLineSupports/UnresolvedIncidents" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Go to Incidents</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card clients-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Resolved Incidents</h5>
                    <p class="card-text">Resolved incidents that were logged by XET support agents and clients.</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ResolvedIncidentsCount</h1>
                    <a href="/FirstLineSupports/ResolvedIncidents" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Go to Incidents</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card clients-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Escalated Incidents</h5>
                    <p class="card-text">Incidents that were escalated manually and automatically secifically from your support level to the next support level.</p>
                    <h1 class="card-text text-center center-number">@ViewBag.EscalatedIncidentsCount</h1>
                    <a href="/FirstLineSupports/EscalatedIncidents" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Go to Incidents</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card clients-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Clients</h5>
                    <p class="card-text">Approved XET clients</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ClientCount</h1>
                    <a href="/ApprovedRequests/Index" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Go to Clients</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
