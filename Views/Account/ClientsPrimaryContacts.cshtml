@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework
@using Helpdesk.Models;

@model List<Helpdesk.Models.ApplicationUser>

@{
    ViewBag.Title = "ClientPrimaryContacts";
}

<h2>Client Administrators</h2>

<div class="table-responsive">
    <table class="table table-bordered" style="width: 100%; max-width: 100%;">
        <thead style="background-color: #f2f2f2;">
            <tr>
                <th style="width: 10%;">Client</th>
                <th style="width: 5%;">Title</th>
                <th style="width: 10%;">First Name</th>
                <th style="width: 10%;">Last Name</th>
                <th style="width: 10%;">Cellphone No.</th>
                <th style="width: 15%;">Email Address</th>
                <th style="width: 20%;">Designation</th>
                <th style="width: 20%;">Office Address</th>
                <th style="width: 15%;">Role</th>
                <th style="width: 10%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="white-space: normal;">@Html.DisplayFor(modelItem => item.ClientName)</td>
                    <td style="white-space: normal;">@Html.DisplayFor(modelItem => item.Title)</td>
                    <td style="white-space: normal;">@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td style="white-space: normal;">@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td style="white-space: normal;">@Html.DisplayFor(modelItem => item.CellNumber)</td>
                    <td style="white-space: normal;">@Html.DisplayFor(modelItem => item.Email)</td>
                    <td style="white-space: normal;">@Html.DisplayFor(modelItem => item.Designations.DesignationName)</td>
                    <td style="white-space: normal;">@Html.DisplayFor(modelItem => item.EmployeeOfficeAddress)</td>
                    <td style="white-space: normal;">
                        @{
                            var userManager = new UserManager<ApplicationUser>(new UserStore<ApplicationUser>(new ApplicationDbContext()));
                            var roles = userManager.GetRoles(item.Id);
                            var role = roles.FirstOrDefault();
                        }
                        @role
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Account", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" }) |
                        @Html.ActionLink("Details", "Details", "Account", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", "Account", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
