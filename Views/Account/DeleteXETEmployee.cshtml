@model Helpdesk.Models.EditXETEmployeeViewModel

@{
    ViewBag.Title = "Delete XET Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete XET Employee</h2>

@using (Html.BeginForm("DeleteXETEmployee", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <p>Are you sure you want to delete this XET Employee?</p>
        <dl class="dl-horizontal">
            <dt>Email:</dt>
            <dd>@Model.Email</dd>

            <dt>First Name:</dt>
            <dd>@Model.FirstName</dd>

            <dt>Last Name:</dt>
            <dd>@Model.LastName</dd>

            <dt>Cell Number:</dt>
            <dd>@Model.CellNumber</dd>

            <dt>Title:</dt>
            <dd>@Model.Title</dd>

            <dt>Designation:</dt>
            <dd>@Model.DesignationId</dd>

            <dt>Role:</dt>
            <dd>@Model.Role</dd>
        </dl>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-default" })
        </div>
    </div>
}
